    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.3.1",
    "graphql-faker": "^2.0.0-rc.25",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.1.0",
    "lodash": "^4.17.21",
    "plop": "^2.7.4",
    "pluralize": "^8.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2",
    "yalc": "^1.0.0-pre.53"
